{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@shop-domain/*": ["domain/*"],
      "@shop-rest/*": ["rest/*"],
      "@shop-storage/*": ["storage/*"],
    }
  }
}
